{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/harp/**.csproj",
            "src/device.*/Interface/Harp.*/**.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/**.Tests/**"
          ]
        }
      ],
      "dest": "api",
      "filter": "filter.yml",
      "enumSortOrder": "declaringOrder",
      "memberLayout": "separatePages"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "tutorials/**.md",
          "tutorials/**/toc.yml",
          "protocol/**.md",
          "whoami/whoami.md",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "protocol/README.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "src/device.*/Assets/*.png",
          "src/device.*/Assets/*.jpg",
          "protocol/assets/**",
          "protocol/*.pdf",
          "images/**",
          "workflows/**"
        ]
      },
      {
        "files": "schema/*.json",
        "src": "protocol",
        "dest": "draft-02"
      },
      {
        "files": "whoami.yml",
        "src": "whoami",
        "dest": "."
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md",
          "apispec/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "globalMetadata": {
      "_enableNewTab": true,
      "_enableSearch": true,
      "_appFooter": "<span>&copy; 2025 harp-tech and Contributors</span> - <span>Licensed under <a href=\"https://creativecommons.org/licenses/by-sa/4.0/\">CC BY-SA 4.0</a>.</span> - <span>Made with <a href=\"https://dotnet.github.io/docfx\">docfx</a></span>",
      "_gitContribute": {
        "repo": "https://github.com/harp-tech/harp-tech.github.io",
        "branch": "main",
        "apiSpecFolder": "apidoc"
      }
    },
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern",
      "docfx-tools/template",
      "template"
    ],
    "markdownEngineName": "markdig",
    "markdownEngineProperties": {
      "markdigExtensions": [
        "attributes",
        "customcontainers"
      ]
    },
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false,
    "xref": [
      "https://bonsai-rx.org/docs/xrefmap.yml",
      "https://bonsai-rx.org/gui/xrefmap.yml",
      "https://horizongir.github.io/opencv.net/xrefmap.yml",
      "https://horizongir.github.io/ZedGraph/xrefmap.yml",
      "https://horizongir.github.io/opentk/xrefmap.yml",
      "https://horizongir.github.io/reactive/xrefmap.yml"
    ]
  }
}